from PPlay.sprite import Sprite
from PPlay.window import Window
from PPlay.gameimage import GameImage
import random

# ================= CONFIGURAÇÃO ===================
Tam_x, Tam_y = 1440, 900
janela = Window(Tam_x, Tam_y)
janela.set_title("Joguito")

teclado = janela.get_keyboard()

Fundo = GameImage("fundooooo.png")
menu = GameImage("menu.xcf")
menu_pausa = Sprite("pausa.xcf") 
menu_pausa.set_position(janela.width / 2 - menu_pausa.width / 2, janela.height / 2 - menu_pausa.height / 2)

vel_x, vel_y, vel_tiro = 300, 300, 800
branco = (255, 255, 255)
amarelo = (255, 255, 0)

# ===== Sprites animadas =====
# Flavia
fla_direita = Sprite("fla_direita.png", 4)
fla_esquerda = Sprite("fla_esquerda.png", 4)
fla_direita.set_position(900, 400)
fla_esquerda.set_position(900, 400)
fla_direcao = "direita"

# Wumberto
wum_direita = Sprite("wum_direita.png", 4)
wum_esquerda = Sprite("wum_esquerda.png", 4)
wum_direita.set_position(900, 600)
wum_esquerda.set_position(900, 600)
wum_direcao = "direita"

# Outros elementos
Soco = Sprite("vazio.png")
sup_direito, sup_direito2 = 1317, 670
sup_esquerdo, sup_esquerdo2 = 29, 573
inf_direito, inf_direito2 = 1332, 526
inf_esquerdo, inf_esquerdo2 = 19, 689
spaws = [sup_direito, sup_esquerdo, inf_direito, inf_esquerdo, sup_direito2, sup_esquerdo2, inf_direito2, inf_esquerdo2]
inimigos = ["ini1.xcf", "ini2.xcf", "ini3.xcf"]
vidas = []
inis_ativos = []
personagens = []
tirosD = []
tirosE = []
timer = 0
vida_ini = 4
total_tela = 5

fla_D, wum_D, vedade = True, True, True
esc_anterior, space_anterior = False, False

frames = 0.0
n_frames = 0
fps = 0
tempo_passado = 0.0
ultimo_chamado = 0.0
state = "menu"
fase = "primeira"

frac_dis_max = 0.66

# ======================================================
# === FUNÇÕES ==========================================

def anda_generico(objeto_direita, objeto_esquerda, cima, baixo, esquerda, direita, dt, direcao_atual):
    """Move e anima personagem genérico (esquerda/direita)"""
    if teclado.key_pressed(cima):
        objeto_direita.y -= vel_y * dt
        objeto_esquerda.y -= vel_y * dt
    if teclado.key_pressed(baixo):
        objeto_direita.y += vel_y * dt
        objeto_esquerda.y += vel_y * dt

    # Andando para a direita
    if teclado.key_pressed(direita):
        objeto_direita.x += vel_x * dt
        objeto_esquerda.x += vel_x * dt
        objeto_direita.update()
        direcao_atual = "direita"

    # Andando para a esquerda
    elif teclado.key_pressed(esquerda):
        objeto_direita.x -= vel_x * dt
        objeto_esquerda.x -= vel_x * dt
        objeto_esquerda.update()
        direcao_atual = "esquerda"

    else:
        # Parado = frame inicial
        objeto_direita.set_curr_frame(0)
        objeto_esquerda.set_curr_frame(0)

    return direcao_atual


def n_sai_da_tela(person):
    if person.x <= 0:
        person.x = 0
    elif person.x + person.width >= janela.width:
        person.x = janela.width - person.width
        
    if person.y >= janela.height - person.height:
        person.y = janela.height - person.height

    elif person.y <= janela.height * frac_dis_max - person.height:
        person.y = janela.height * frac_dis_max - person.height


def da_tiro_D():
    tiroD = Sprite("bala.png")
    tiroD.set_position(fla_direita.x + fla_direita.width, fla_direita.y + 40) 
    tirosD.append(tiroD)


def da_tiro_E():
    tiroE = Sprite("bala_reverse.png")
    tiroE.set_position(fla_direita.x - tiroE.width, fla_direita.y + 40) 
    tirosE.append(tiroE)


lonjura = 60
vel_i = 150


def andar_IA(inimigo):
    if multiplayer:
        dist_f = abs(inimigo.x - fla_direita.x) + abs(inimigo.y - fla_direita.y)
        dist_w = abs(inimigo.x - wum_direita.x) + abs(inimigo.y - wum_direita.y)
        if dist_f < dist_w:
            alvo = fla_direita
        else:
            alvo = wum_direita
    else:
        alvo = fla_direita

    if inimigo.x < alvo.x:
        inimigo.x += vel_i * delta_time
    elif inimigo.x > alvo.x:
        inimigo.x -= vel_i * delta_time
    if inimigo.y < alvo.y:
        inimigo.y += vel_i * delta_time
    elif inimigo.y > alvo.y:
        inimigo.y -= vel_i * delta_time


def chama_ini():
    num_ra = random.randint(0, 2)
    posi_ra = random.randint(0, 3)
    ini_random = inimigos[num_ra]
    ini_gerado = Sprite(ini_random)
    inis_ativos.append(ini_gerado)
    ini_gerado.set_position(spaws[posi_ra], spaws[posi_ra+4])


def da_soco_D():
    Soco.set_position(wum_direita.x + wum_direita.width, wum_direita.y + 40)


def da_soco_E():
    Soco.set_position(wum_direita.x - Soco.width, wum_direita.y + 40)

# ======================================================
# === LOOP PRINCIPAL ===================================

while vedade:
    delta_time = janela.delta_time()
    esc_atual = teclado.key_pressed("ESC")

    if state == "menu":
        menu.draw()
        if teclado.key_pressed("esc"):
            exit()
        if teclado.key_pressed("Q"):
            state = "jogando"
        if teclado.key_pressed("X"):
            personagens = [fla_direita]
            multiplayer = False
        if teclado.key_pressed("C"):
            personagens = [fla_direita, wum_direita]
            multiplayer = True
            
    elif state == "jogando":
        Fundo.draw()
        timer += delta_time
        frames += delta_time
        n_frames += 1
        if frames >= 1:
            fps = n_frames/frames
            frames = 0.0
            n_frames = 0

        # ===== Flavia =====
        if fla_direita in personagens:
            fla_direcao = anda_generico(fla_direita, fla_esquerda, "W", "S", "A", "D", delta_time, fla_direcao)
            if teclado.key_pressed("SPACE"):
                if timer >= 0.5:
                    timer = 0
                    if fla_direcao == "direita":
                        da_tiro_D()
                    else:
                        da_tiro_E()

        # ===== Wumberto =====
        if wum_direita in personagens:    
            wum_direcao = anda_generico(wum_direita, wum_esquerda, "UP", "DOWN", "LEFT", "RIGHT", delta_time, wum_direcao)
            if teclado.key_pressed("K"):
                if wum_direcao == "direita":
                    da_soco_D()
                else:
                    da_soco_E()

        # ===== Tiros =====
        for lista, vel, sentido in [(tirosD, vel_tiro, 1), (tirosE, vel_tiro, -1)]:
            for i in range(len(lista) - 1, -1, -1):
                tiro = lista[i]
                tiro.draw()
                tiro.x += vel * delta_time * sentido
                if tiro.x > janela.width or tiro.x + tiro.width < 0:
                    lista.pop(i)

        # ===== Inimigos =====
        tempo_passado += delta_time
        q_ativos = len(inis_ativos)
        if q_ativos < total_tela:
            if (tempo_passado - ultimo_chamado) >= 3.0:
                chama_ini()
                ultimo_chamado = tempo_passado
                vidas.append(vida_ini)
        for obj in inis_ativos:
            n_sai_da_tela(obj)
            obj.draw()
            andar_IA(obj)

        # ===== Desenha personagens =====
        if fla_direcao == "direita":
            fla_direita.draw()
        else:
            fla_esquerda.draw()

        if multiplayer:
            if wum_direcao == "direita":
                wum_direita.draw()
            else:
                wum_esquerda.draw()

        # ===== FPS e controle de pausa =====
        janela.draw_text(f"FPS: {int(fps)}", 10, 10, size=10, color=amarelo, bold=True)
        if esc_atual and not esc_anterior:
            state = "pausa"
            
    elif state == "pausa":
        menu_pausa.draw()
        janela.draw_text("Esc para voltar ao jogo", janela.width / 2 - 100, janela.height / 2 + 150, 20, branco, "Calibri", True)
        janela.draw_text("Espaço para voltar ao menu", janela.width / 2 - 120, janela.height / 2 + 180, 20, branco, "Calibri", True)
        
        if esc_atual and not esc_anterior:
            state = "jogando"

        space_atual = teclado.key_pressed("SPACE")
        if space_atual and not space_anterior:
             state = "menu"
        space_anterior = space_atual

    esc_anterior = esc_atual
    janela.update()
